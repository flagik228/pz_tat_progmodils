<Window x:Class="pz6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz6"
        mc:Ignorable="d"
        Title="Your Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <InkCanvas Grid.Row="0" Name="inkCanvas"/>

        <Button Grid.Row="1" Content="Start" Click="StartButton_Click"/>

        <ProgressBar Grid.Row="2" Name="progressBar" Minimum="0" Maximum="100"/>

        <TextBlock Grid.Row="3" Name="outputText" TextWrapping="Wrap"/>
    </Grid>
</Window>