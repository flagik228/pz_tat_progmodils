<Window x:Class="pract15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Info App" Height="350" Width="500">
    <Grid Background="#FFCEE3E4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Выберите сетевой интерфейс:" FontSize="16" Background="#FFD3EAE8" FontFamily="Verdana"/>
            <ComboBox x:Name="InterfaceComboBox" Width="479" Margin="0,5,0,5" Background="#FF16F9DF" BorderBrush="#FF140DF3" FontSize="14" FontFamily="Verdana"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10" Background="#FF86CA8A">
            <TextBlock x:Name="InfoTextBlock" TextWrapping="Wrap" FontSize="14" FontFamily="Verdana"/>
        </StackPanel>
    </Grid>
</Window>
